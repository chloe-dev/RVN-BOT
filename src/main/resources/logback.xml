<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%blue(%d{dd-MM-YY}) at %blue(%d{HH:mm:ss})] | %green(%-25thread) | %green(%-20logger{0}) | %highlight(%-5level) | %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>